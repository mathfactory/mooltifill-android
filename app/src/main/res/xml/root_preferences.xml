<PreferenceScreen
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        app:title="@string/settings_header">
        <SwitchPreference
            app:summaryOn="Mooltifill enabled"
            app:summaryOff="Mooltifill disabled"
            app:key="enable_mooltifill"
            app:title="Enable Mooltipass Autofill Service" />
        <SwitchPreference
            app:key="awareness"
            app:title="Mooltipass Awareness"
            app:summaryOn="Track connection state of the mooltipass device and show status notification"
            app:summaryOff="Do not track connection state of the mooltipass device"
            app:defaultValue="true" />
        <Preference
            app:key="test_ping"
            app:title="Test Mooltipass Device Connection"
            app:summary="Please enable Bluetooth and be sure to have the ble device paired before testing the connection." />
        <ListPreference
            app:key="security"
            app:title="@string/paranoia_title"
            app:entries="@array/paranoia_entries"
            app:entryValues="@array/paranoia_values"
            app:defaultValue="high"
            app:enabled="false"
            app:useSimpleSummaryProvider="true" />
        <ListPreference
            app:key="debug_level"
            app:title="Debug Output to logcat"
            app:entries="@array/debug_level_entries"
            app:entryValues="@array/debug_level_values"
            app:defaultValue="0"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

    <PreferenceCategory
            app:title="Service Mapping (urls)">
        <ListPreference
            app:key="www_substitution"
            app:title="Substitution of www. subdomain part from browser urls"
            app:entries="@array/www_substitution_entries"
            app:entryValues="@array/www_substitution_values"
            app:defaultValue="Nochange"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

    <PreferenceCategory
            app:title="Service Mapping (app names)">
        <SeekBarPreference
            app:key="pkg_substitution_max_components"
            app:title="Max. package name component count"
            app:summary="Cut-off package name after specified amount of components"
            app:defaultValue="15"
            app:showSeekBarValue="true"
            app:seekBarIncrement="1"
            app:min="2"
            android:max="15" />
        <SwitchPreference
            app:key="pkg_substitution_reverse"
            app:title="Reverse package name components of apps"
            app:defaultValue="false" />
    </PreferenceCategory>

    <PreferenceCategory
    app:title="Password Generator">
        <EditTextPreference
            app:key="pwgen_chset"
            app:title="Character Set"
            app:useSimpleSummaryProvider="true"
            app:defaultValue="@string/default_pwgen_chset"/>
        <EditTextPreference
            app:key="pwgen_length"
            app:title="Length"
            android:inputType="number"
            app:useSimpleSummaryProvider="true"
            app:defaultValue="12"/>
        <Preference
            app:key="pwgen_cmd"
            app:title="Generate Password"
            app:summary="Generate password with the defined strategy, you will be asked for the service/login name in the next step." />
    </PreferenceCategory>
</PreferenceScreen>
